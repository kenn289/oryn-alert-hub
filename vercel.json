{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install --production",
  "devCommand": "npm run dev",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/app/api/**/route.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/stock/(.*)",
      "destination": "https://backend-api-gray-six.vercel.app/api/stock/$1"
    },
    {
      "source": "/api/ai/(.*)",
      "destination": "https://backend-api-gray-six.vercel.app/api/ai/$1"
    },
    {
      "source": "/api/portfolio",
      "destination": "https://backend-api-gray-six.vercel.app/api/portfolio"
    },
    {
      "source": "/api/watchlist",
      "destination": "https://backend-api-gray-six.vercel.app/api/watchlist"
    },
    {
      "source": "/api/notifications",
      "destination": "https://backend-api-gray-six.vercel.app/api/notifications"
    },
    {
      "source": "/api/support/(.*)",
      "destination": "https://backend-api-gray-six.vercel.app/api/support/$1"
    },
    {
      "source": "/api/razorpay/(.*)",
      "destination": "https://backend-api-gray-six.vercel.app/api/razorpay/$1"
    },
    {
      "source": "/api/health",
      "destination": "https://backend-api-gray-six.vercel.app/api/health"
    }
  ],
  "env": {
    "NEXT_PUBLIC_BASE_URL": "https://oryn-pi.vercel.app",
    "NEXT_PUBLIC_APP_URL": "https://oryn-pi.vercel.app",
    "BACKEND_URL": "https://backend-api-gray-six.vercel.app"
  },
  "framework": "nextjs"
}